    <script>
        // ========================================
        // CONFIGURA√á√ÉO DO SUPABASE - ‚úÖ CONFIGURADO!
        // ========================================
        
        const SUPABASE_URL = 'https://jrmxzfycyvlejjhsvfvu.supabase.co';
        const SUPABASE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImpybXh6ZnljeXZsZWpqaHN2ZnZ1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3Njg0NDc4NDUsImV4cCI6MjA4NDAyMzg0NX0.Cv_o3ssiF_BHhAOhlvBNCTpTR_CVM3W6akpL1MnGm6I';
        
        // Inicializar Supabase
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        let currentUser = null;
        let ebooks = [];
        let clients = [];
        let currentEbook = null;
        let currentPage = 1;
        let totalPages = 0;
        let pdfDoc = null;
        let scale = 1.5;
        let isDarkMode = false;

        // ========================================
        // FUN√á√ïES DE BANCO DE DADOS
        // ========================================
        
        async function loadData() {
            try {
                // Carregar e-books
                const { data: ebooksData, error: ebooksError } = await supabase
                    .from('ebooks')
                    .select('*')
                    .order('created_at', { ascending: false });
                
                if (ebooksError) throw ebooksError;
                ebooks = ebooksData || [];

                // Carregar clientes
                const { data: clientsData, error: clientsError } = await supabase
                    .from('clients')
                    .select('*')
                    .order('created_at', { ascending: false });
                
                if (clientsError) throw clientsError;
                clients = clientsData || [];

            } catch (error) {
                console.error('Erro ao carregar dados:', error);
                showNotification('Erro ao carregar dados: ' + error.message, 'error');
            }
        }

        async function saveEbook(ebook) {
            try {
                const { data, error } = await supabase
                    .from('ebooks')
                    .insert([ebook])
                    .select();
                
                if (error) throw error;
                return data[0];
            } catch (error) {
                console.error('Erro ao salvar e-book:', error);
                throw error;
            }
        }

        async function updateEbook(id, updates) {
            try {
                const { error } = await supabase
                    .from('ebooks')
                    .update(updates)
                    .eq('id', id);
                
                if (error) throw error;
            } catch (error) {
                console.error('Erro ao atualizar e-book:', error);
                throw error;
            }
        }

        async function deleteEbook(id) {
            try {
                const { error } = await supabase
                    .from('ebooks')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
            } catch (error) {
                console.error('Erro ao deletar e-book:', error);
                throw error;
            }
        }

        async function saveClient(client) {
            try {
                const { data, error } = await supabase
                    .from('clients')
                    .insert([client])
                    .select();
                
                if (error) throw error;
                return data[0];
            } catch (error) {
                console.error('Erro ao salvar cliente:', error);
                throw error;
            }
        }

        async function updateClient(id, updates) {
            try {
                const { error } = await supabase
                    .from('clients')
                    .update(updates)
                    .eq('id', id);
                
                if (error) throw error;
            } catch (error) {
                console.error('Erro ao atualizar cliente:', error);
                throw error;
            }
        }

        async function deleteClient(id) {
            try {
                const { error } = await supabase
                    .from('clients')
                    .delete()
                    .eq('id', id);
                
                if (error) throw error;
            } catch (error) {
                console.error('Erro ao deletar cliente:', error);
                throw error;
            }
        }

        async function uploadPDF(file) {
            try {
                const fileName = `${Date.now()}-${file.name}`;
                const { data, error } = await supabase.storage
                    .from('pdfs')
                    .upload(fileName, file);
                
                if (error) throw error;

                const { data: urlData } = supabase.storage
                    .from('pdfs')
                    .getPublicUrl(fileName);
                
                return urlData.publicUrl;
            } catch (error) {
                console.error('Erro ao fazer upload:', error);
                throw error;
            }
        }

        // Login
        async function login(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (username === 'admin' && password === 'admin123') {
                currentUser = { username, role: 'admin' };
                await loadData();
                showDashboard();
            } else {
                showNotification('Usu√°rio ou senha incorretos', 'error');
            }
        }

        // Logout
        function logout() {
            currentUser = null;
            document.getElementById('dashboardPage').style.display = 'none';
            document.getElementById('loginPage').style.display = 'block';
        }

        // Show Dashboard
        function showDashboard() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('dashboardPage').style.display = 'block';
            renderEbooks();
            renderClients();
            updateStats();
        }

        // Upload Ebook
        async function uploadEbook(e) {
            e.preventDefault();
            const title = document.getElementById('ebookTitle').value;
            const description = document.getElementById('ebookDesc').value;
            const fileInput = document.getElementById('ebookFile');
            const file = fileInput.files[0];

            if (!file || file.type !== 'application/pdf') {
                showNotification('Selecione um arquivo PDF v√°lido', 'error');
                return;
            }

            try {
                showNotification('Fazendo upload... Aguarde', 'info');
                
                // Upload do PDF para Supabase Storage
                const pdfUrl = await uploadPDF(file);

                const newEbook = {
                    title,
                    description,
                    pdf_url: pdfUrl,
                    views: 0,
                    created_at: new Date().toISOString()
                };

                const savedEbook = await saveEbook(newEbook);
                ebooks.push(savedEbook);
                
                showNotification('E-book enviado com sucesso!', 'success');
                document.getElementById('uploadForm').reset();
                renderEbooks();
            } catch (error) {
                showNotification('Erro ao enviar e-book: ' + error.message, 'error');
            }
        }

        // Add Client
        async function addClient(e) {
            e.preventDefault();
            const name = document.getElementById('clientName').value;
            const email = document.getElementById('clientEmail').value;
            const ebookId = document.getElementById('clientEbook').value;

            const token = generateToken();
            const newClient = {
                name,
                email,
                ebook_id: ebookId,
                token,
                active: true,
                created_at: new Date().toISOString()
            };

            try {
                const savedClient = await saveClient(newClient);
                clients.push(savedClient);
                
                showNotification('Cliente adicionado com sucesso!', 'success');
                document.getElementById('clientForm').reset();
                renderClients();
            } catch (error) {
                showNotification('Erro ao adicionar cliente: ' + error.message, 'error');
            }
        }

        // Generate Token
        function generateToken() {
            return Math.random().toString(36).substring(2) + Date.now().toString(36);
        }

        // Render Ebooks List
        function renderEbooks() {
            const list = document.getElementById('ebooksList');
            list.innerHTML = ebooks.map(ebook => `
                <div class="ebook-item">
                    <div>
                        <h4>${ebook.title}</h4>
                        <p>${ebook.description}</p>
                        <small>üìä ${ebook.views} visualiza√ß√µes</small>
                    </div>
                    <button class="btn-delete" onclick="deleteEbookById('${ebook.id}')">üóëÔ∏è Deletar</button>
                </div>
            `).join('');

            const select = document.getElementById('clientEbook');
            select.innerHTML = '<option value="">Selecione um e-book</option>' +
                ebooks.map(ebook => `<option value="${ebook.id}">${ebook.title}</option>`).join('');
        }

        // Render Clients List
        function renderClients() {
            const list = document.getElementById('clientsList');
            list.innerHTML = clients.map(client => {
                const ebook = ebooks.find(e => e.id === client.ebook_id);
                const link = `${window.location.origin}${window.location.pathname}?token=${client.token}`;
                return `
                    <div class="client-item">
                        <div>
                            <h4>${client.name}</h4>
                            <p>üìß ${client.email}</p>
                            <p>üìö ${ebook ? ebook.title : 'E-book n√£o encontrado'}</p>
                            <small class="status ${client.active ? 'active' : 'inactive'}">
                                ${client.active ? '‚úÖ Ativo' : '‚ùå Inativo'}
                            </small>
                        </div>
                        <div class="client-actions">
                            <button class="btn-copy" onclick="copyLink('${link}')">üìã Copiar Link</button>
                            <button class="btn-toggle" onclick="toggleClientStatus('${client.id}')">
                                ${client.active ? 'üîí Desativar' : 'üîì Ativar'}
                            </button>
                            <button class="btn-delete" onclick="deleteClientById('${client.id}')">üóëÔ∏è</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Delete functions
        async function deleteEbookById(id) {
            if (confirm('Tem certeza que deseja deletar este e-book?')) {
                try {
                    await deleteEbook(id);
                    ebooks = ebooks.filter(e => e.id !== id);
                    renderEbooks();
                    updateStats();
                    showNotification('E-book deletado com sucesso!', 'success');
                } catch (error) {
                    showNotification('Erro ao deletar e-book: ' + error.message, 'error');
                }
            }
        }

        async function deleteClientById(id) {
            if (confirm('Tem certeza que deseja deletar este cliente?')) {
                try {
                    await deleteClient(id);
                    clients = clients.filter(c => c.id !== id);
                    renderClients();
                    updateStats();
                    showNotification('Cliente deletado com sucesso!', 'success');
                } catch (error) {
                    showNotification('Erro ao deletar cliente: ' + error.message, 'error');
                }
            }
        }

        async function toggleClientStatus(id) {
            const client = clients.find(c => c.id === id);
            if (client) {
                try {
                    await updateClient(id, { active: !client.active });
                    client.active = !client.active;
                    renderClients();
                    showNotification(`Cliente ${client.active ? 'ativado' : 'desativado'}!`, 'success');
                } catch (error) {
                    showNotification('Erro ao atualizar status: ' + error.message, 'error');
                }
            }
        }

        // Copy Link
        function copyLink(link) {
            navigator.clipboard.writeText(link);
            showNotification('Link copiado!', 'success');
        }

        // Update Stats
        function updateStats() {
            document.getElementById('totalEbooks').textContent = ebooks.length;
            document.getElementById('totalClients').textContent = clients.length;
            document.getElementById('totalViews').textContent = ebooks.reduce((sum, e) => sum + e.views, 0);
        }

        // Switch Tab
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

            event.target.classList.add('active');
            document.getElementById(tab + 'Tab').classList.add('active');
        }

        // Show Notification
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => notification.remove(), 3000);
        }

        // Load ebook for client
        async function loadClientEbook(token) {
            await loadData();
            const client = clients.find(c => c.token === token);
            
            if (!client) {
                document.body.innerHTML = '<div class="error-page"><h1>‚ùå Link Inv√°lido</h1><p>Este link n√£o existe ou expirou.</p></div>';
                return;
            }

            if (!client.active) {
                document.body.innerHTML = '<div class="error-page"><h1>üîí Acesso Bloqueado</h1><p>Seu acesso foi desativado. Entre em contato com o suporte.</p></div>';
                return;
            }

            const ebook = ebooks.find(e => e.id === client.ebook_id);
            
            if (!ebook) {
                document.body.innerHTML = '<div class="error-page"><h1>üìö E-book n√£o encontrado</h1></div>';
                return;
            }

            currentEbook = ebook;
            
            // Incrementar views
            try {
                await updateEbook(ebook.id, { views: ebook.views + 1 });
                ebook.views++;
            } catch (error) {
                console.error('Erro ao atualizar views:', error);
            }

            showReader();
            loadPDF(ebook.pdf_url);
        }

        // Show Reader
        function showReader() {
            document.getElementById('loginPage').style.display= 'none';
            document.getElementById('dashboardPage').style.display = 'none';
            document.getElementById('readerPage').style.display = 'block';
            document.getElementById('ebookTitle').textContent = currentEbook.title;
        }

        // Load PDF
        async function loadPDF(url) {
            try {
                const loadingTask = pdfjsLib.getDocument(url);
                pdfDoc = await loadingTask.promise;
                totalPages = pdfDoc.numPages;
                
                const savedPage = localStorage.getItem(`lastPage_${currentEbook.id}`);
                currentPage = savedPage ? parseInt(savedPage) : 1;
                
                renderPage(currentPage);
                updatePageInfo();
            } catch (error) {
                console.error('Erro ao carregar PDF:', error);
                showNotification('Erro ao carregar o PDF', 'error');
            }
        }

        // Render PDF Page
        async function renderPage(num) {
            const page = await pdfDoc.getPage(num);
            const canvas = document.getElementById('pdfCanvas');
            const ctx = canvas.getContext('2d');

            const viewport = page.getViewport({ scale });
            canvas.width = viewport.width;
            canvas.height = viewport.height;

            await page.render({
                canvasContext: ctx,
                viewport: viewport
            }).promise;

            localStorage.setItem(`lastPage_${currentEbook.id}`, currentPage);
            updateProgress();
        }

        // Navigation
        function nextPage() {
            if (currentPage < totalPages) {
                currentPage++;
                renderPage(currentPage);
                updatePageInfo();
            }
        }

        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                renderPage(currentPage);
                updatePageInfo();
            }
        }

        // Zoom
        function zoomIn() {
            scale += 0.25;
            renderPage(currentPage);
        }

        function zoomOut() {
            if (scale > 0.5) {
                scale -= 0.25;
                renderPage(currentPage);
            }
        }

        // Dark Mode
        function toggleDarkMode() {
            isDarkMode = !isDarkMode;
            document.body.classList.toggle('dark-mode');
        }

        // Fullscreen
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
            } else {
                document.exitFullscreen();
            }
        }

        // Update Page Info
        function updatePageInfo() {
            document.getElementById('currentPage').textContent = currentPage;
            document.getElementById('totalPages').textContent = totalPages;
        }

        // Update Progress
        function updateProgress() {
            const progress = (currentPage / totalPages) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }

        // Initialize
        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            const token = urlParams.get('token');

            if (token) {
                loadClientEbook(token);
            }
        };

        // PDF.jsWorkerSrc
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    </script>
</body>
</html>
